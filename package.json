{
  "name": "@thinhdang1402/thinhdangmcp",
  "version": "1.0.0",
  "description": "MCP server with stdio, SSE, and StreamableHttp transports - demo implementation",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Thinh Dang",
  "repository": {
    "type": "git",
    "url": "https://github.com/thinhdangdev/thinhdangmcp.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server",
    "stdio",
    "sse",
    "streamablehttp"
  ],
  "mcpName": "thinhdangmcp",
  "type": "module",
  "bin": {
    "thinhdangmcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && shx cp -r docs dist/ && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "start:stdio": "node dist/index.js stdio",
    "start:sse": "node dist/index.js sse",
    "start:http": "node dist/index.js streamableHttp",
    "prettier:fix": "prettier --write .",
    "prettier:check": "prettier --check ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jszip": "^3.10.1",
    "telegraf": "^4.16.3",
    "zod": "^3.25.0",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "prettier": "^2.8.8",
    "shx": "^0.3.4",
    "typescript": "^5.6.2"
  }
}
